extends ../pug/layout.pug

include ../blocks/breadcrumbs/breadcrumbs.pug
include ../blocks/block-profile-info/profile-info.pug
include ../blocks/block-sidebar-menu/sidebar-menu.pug

block vars
	- var page = 'order-1';
	- var header_class = "main-header main-header--bg" 
	- var menu_btn_class = "btn-white main-header__menu-btn"

block content
	+breadcrumbs([{href:"#",name: "Главная"},{href:"#",name: "Личный кабинет"},{href:"#",name: "Заявка на подбор суррогатной мамы", class: "current"}])

	section.page.page-order
		.container
					h2.page-title Заявка на подбор суррогатной мамы
					.page-content
						blockquote <strong>Внимание!</strong> Выбор суррогатной мамы происходит по каталогу с возможностью просмотра подробного профиля. Девушки в каталоге собраны привлекательные, строго до 34 лет. При заинтересованности в кандидате, Вы можете запросить у менеджера агентства расширенную информацию по донору, пообщаться с девушкой по телефону, запросить видео

					.order.order-surmother
						form(action="").form.form-order.form-order-surmother
							.form__body
								.row
									.col-12.col-sm-4
										.form__field
											.form__field-name Фамилия Имя Отчество <span>*</span>
											input(type="text" class="form-input" placeholder="Ситникова Екатерина Виталиевна")
									.col-12.col-sm-4
										.form__field
											.form__field-name E-mail <span>*</span>
											input(type="text" class="form-input" placeholder="sev@gmail.com")
									.col-12.col-sm-4
										.form__field
											.form__field-name Номер телефона
											input(type="phone" class="form-input" placeholder="+7 (___) ___ - __ - __")
									.col-12.col-sm-4
										.form__field
											.form__field-name Город проживания <span>*</span>
											input(type="text" class="form-input" placeholder="")
									.col-12.col-sm-8
										.form__field
											.form__field-name В какой клинике планируете программу? Название клиники и город <span>*</span>
											input(type="text" class="form-input" placeholder="")
									.col-12
										.form__field
											.form__field-name Ф.И.О. вашего лечащего врача?
											input(type="text" class="form-input" placeholder="")
									.col-12
										.form__field
											.form__field-name Предполагаемые сроки проведения протокола?
											.form__radio
												label.custom-radio-label
													input(class="custom-radio" type="radio" name="surmother-time")
													span.custom-radio__text сурмама нужна срочно
												label.custom-radio-label
													input(class="custom-radio" type="radio" name="surmother-time")
													span.custom-radio__text сурмама нужна в течении 2-ух месяцев
												label.custom-radio-label
													input(class="custom-radio" type="radio" name="surmother-time")
													span.custom-radio__text нужна консультация
									.col-12
										.form__field
											.form__field-name Вид программы
											.form__radio
												label.custom-radio-label
													input(class="custom-radio" type="radio" name="program")
													span.custom-radio__text программа с криозамороженными эмбрионами
												label.custom-radio-label
													input(class="custom-radio" type="radio" name="program")
													span.custom-radio__text программа с синхронизацией менструальных циклов
									.col-12
										.form__field
											.form__field-name Пожелания к кандидатуре суррогатной матери (условия, особенности программы)
											textarea(name="", cols="30", rows="10").form-textarea
									.col-12
										.form__field
											.form__field-name Условия, которые Вы можете предложить суррогатной матери
											textarea(name="", cols="30", rows="10").form-textarea
									.col-12
										.form__field 
											label.form__agreement
												input(type="checkbox" name="agreement")
												span.form__agreement-text Согласен на обработку персональных данныхв соответствии с <a href="#">политикой конфиденциальности</a>

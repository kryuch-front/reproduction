extends ../pug/layout.pug
//- mixins
include ../blocks/breadcrumbs/breadcrumbs.pug
include ../blocks/block-sidebar-menu/sidebar-menu.pug
include ../blocks/video/video.pug


block vars
	- var page = 'programm-desc-3';
	- var header_class = "main-header main-header--programm"
	- var menu_btn_class = "btn-default main-header__menu-btn"
	- var header_bg = "/dist/img/programm_desc/baner_bg3.jpg"
	- var b_title = "Этапы программы сурогатного материнства"
	- var b_text = "Агенство донорства яйцеклеток и суррогатного материнства с 12-летним опытом. Работаем по России в Тюмени, Екатеринбурге, Кургане, Краснодаре и другихгородах России"
	- var b_btn_text = "Нужна помощь в подборе программы"

block content
	+breadcrumbs([{href:"#",name: "Главная"},{href:"#",name: "Родителям"},{href:"#",name: "Виды программ сурогатного материнства", class: "current"}])

	section.page.page-programm
		.container
					h2.page-title Этапы программы сурогатного материнства
					.page-content
						p Счастье материнства – лучшее из того, что природа дарит женщине. Дети — это не только положительные эмоции, которые мы получаем буквально каждый день, но и в какой-то степени смысл нашего существования.
						.list-steps
							.list-steps__item 
								.list-steps__item-number 1
								.list-steps__item-text Вы связывайтесь с нами по телефону, электронной почте, заполненной заявке на подбор или через сообщение на сайте. При получении заявки на подбор с вами свяжется наш менеджер, проконсультирует вас по интересующим вопросам
							.list-steps__item 
								.list-steps__item-number 2
								.list-steps__item-text <strong>ВНИМАНИЕ! ЗАЯВКА НА ПОДБОР – ОБЯЗАТЕЛЬНА!</strong> совместно подбираем кандидатуру суррогатной матери под ваши условия
							.list-steps__item 
								.list-steps__item-number 3
								.list-steps__item-text Далее мы ведём выбранную Вами кандидатку на консультацию и узи к Вашему лечащему врачу-репродуктологу для оценки состояния её матки, на основании которого врач даёт предварительное заключение о её возможности вынашивания здорового ребенка
							.list-steps__item 
								.list-steps__item-number 4
								.list-steps__item-text Если Ваш репродуктолог на основании УЗИ утверждает кандидатуру, мы оповещаем Вас об этом и начинаем подготовку девушки к программе. Под руководством нашего куратора суррогатная мама проходит комплексное медицинское обследование в соответствии с требованиями приказа МЗ РФ от 30.08.2012 № 107н «О порядке использования вспомогательных репродуктивных технологий, противопоказаниях и ограничениях к их применению». Мы следим за за выполнением кандидаткой всех назначений врача, своевременным прохождением обследований, приёмов и т.п.)
							.list-steps__item 
								.list-steps__item-number 5
								.list-steps__item-text В случае если ваш врач откажет нашему кандидату, мы предоставим полноценную замену или возвращаемся к подбору
							.list-steps__item 
								.list-steps__item-number 6
								.list-steps__item-text СМ проходит необходимое медицинское обследование, после чего врач назначает синхронизацию Вашего цикла с циклом СМ или донора яйцеклеток (в зависимости от программы);
							.list-steps__item 
								.list-steps__item-number 7
								.list-steps__item-text Мы разрабатываем все юридические документы, необходимые в программе, согласовываем нюансы договорных отношений и Вы, с кандидаткой, подписываете Договор суррогатного материнства;
							.list-steps__item 
								.list-steps__item-number 8
								.list-steps__item-text На момент начала подготовки СМ к подсадке эмбрионов мы подписываем Договор подбора и Вы рассчитываетесь с агентством;
							.list-steps__item 
								.list-steps__item-number 9
								.list-steps__item-text На 18-22 день менструального цикла происходит подсадка эмбрионов в полость матки суррогатной матери;
							.list-steps__item 
								.list-steps__item-number 10
								.list-steps__item-text Желаем вам удачи и ждём результата ХГЧ через 14 дней;
							.list-steps__item 
								.list-steps__item-number 11
								.list-steps__item-text Вы так же можете взять у нас в агентстве «личного менеджера» для вашей СМ.
					include ../blocks/block-surrogate-request/surrogate-request.pug

	
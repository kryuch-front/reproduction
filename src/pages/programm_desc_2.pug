extends ../pug/layout.pug
//- mixins
include ../blocks/breadcrumbs/breadcrumbs.pug
include ../blocks/block-sidebar-menu/sidebar-menu.pug
include ../blocks/video/video.pug


block vars
	- var page = 'programm-desc-2';
	- var header_class = "main-header main-header--programm"
	- var menu_btn_class = "btn-default main-header__menu-btn"
	- var header_bg = "/dist/img/programm_desc/baner_bg2.jpg"
	- var b_title = "Показания к суррогатному материнству"
	- var b_text = "Агенство донорства яйцеклеток и суррогатного материнства с 12-летним опытом. Работаем по России в Тюмени, Екатеринбурге, Кургане, Краснодаре и другихгородах России"
	- var b_btn_text = "Нужна помощь в подборе программы"

block content
	+breadcrumbs([{href:"#",name: "Главная"},{href:"#",name: "Родителям"},{href:"#",name: "Виды программ сурогатного материнства", class: "current"}])

	section.page.page-programm
		.container
					h2.page-title Показания к суррогатному материнству
					.page-content
						ol(type="буквы")
							li Отсутствие матки (врожденное или приобретенное);
							li Деформация полости или шейки матки при врожденных пороках развития или в результате заболеваний;
							li Патология эндометрия (синехии, облитерация полости матки, атрофия эндометрия);
							li Заболевания (состояния), включенные в Перечень противопоказаний;
							li Неудачные повторные попытки ЭКО (3 и более) при неоднократном получении эмбрионов хорошего качества, перенос которых не приводит к наступлению беременности;
							li Привычное не вынашивание беременности (3 и более самопроизвольных выкидыша в анамнезе).
						h5 Суррогатной мамой может быть женщина
						ul
							li В возрасте от двадцати до тридцати пяти лет
							li Имеющая не менее одного здорового собственного ребенка/детей, получившая медицинское заключение об удовлетворительном состоянии здоровья.
							li Давшая письменное информированное добровольное согласие на медицинское вмешательство
							li Женщина, состоящая в браке, зарегистрированном в порядке, установленном законодательством Российской Федерации, может быть суррогатной матерью только с письменного согласия супруга
							li Суррогатная мама не может быть одновременно донором ооцита
					include ../blocks/block-surrogate-request/surrogate-request.pug

	
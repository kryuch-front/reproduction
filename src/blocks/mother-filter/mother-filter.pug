						.form__body
							.row
								.col-12.col-sm-6.col-md-4.col-lg-3
									.form__field
										.form__field-name Поиск по id
										.form-input__wrap
											input(type="text" class="form-input" placeholder="Введите id")
											.form-input-icon.form-input-icon--search
								.col-12.col-sm-6.col-md-4.col-lg-3
									.form__field.clearfix
										.form__field-name Город
										select.form-select.js-nice-select
											option(value="Тюмень") Тюмень
											option(value="Сургут") Сургут
											option(value="Урал") Урал
											option(value="Омск") Омск
								.col-12.col-sm-6.col-md-4.col-lg-3
									.form__field.clearfix
										.form__field-name Национальность
										select.form-select.js-nice-select
											option(value="Русская") Русская
											option(value="Татарка") Татарка
											option(value="Казашка") Казашка
								.col-12.col-sm-6.col-md-4.col-lg-3
									.form__field
										.form__field-name Цвет глаз
										.form-select-color
											label.custom-color-checkbox
												input(class="color-checkbox" type="checkbox")
												span(data-toggle="tooltip" title="Серый").color.color--gray.js-tooltip
